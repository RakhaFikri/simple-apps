#MENENTUKAN IMAGES
FROM node:18.16

#WORKDIR
WORKDIR app/

#COPY FILE TO IMAGE
ADD . /app

#PERINTAH YANG DIJALANKAN
RUN apt update -y && npm install

# MAINTAINER IMAGE
# LABEL email= "rakha.fikri10@gmail.com"

# PERINTAH YANG DIJALANKAN PADA SAAT CONTIANER SUDAH UP
CMD ["npm","start"]

# DESCRIBE EXPOSE PORT
EXPOSE 3000